<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.avoirom.calculator.ui.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.CalculatorFragment">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:onClick="@{() -> viewModel.selectOperator('+')}"
                android:text="+"
                app:layout_row="0"
                app:layout_column="0" />

            <Button
                android:onClick="@{() -> viewModel.selectOperator('-')}"
                android:text="-"
                app:layout_row="0"
                app:layout_column="1" />

            <Button
                android:onClick="@{() -> viewModel.selectOperator('c')}"
                android:text="C"
                app:layout_row="0"
                app:layout_column="2" />

            <Button
                android:onClick="@{() -> viewModel.selectOperator('x')}"
                android:text="X"
                app:layout_row="1"
                app:layout_column="0" />

            <Button
                android:onClick="@{() -> viewModel.selectOperator('%')}"
                android:text="%"
                app:layout_row="1"
                app:layout_column="1"/>

            <Button
                android:onClick="@{() -> viewModel.selectOperator('=')}"
                android:text="="
                app:layout_row="1"
                app:layout_column="2"/>

            <Button
                android:onClick="@{() -> viewModel.selectOperand(0)}"
                android:text="0"
                app:layout_row="2"
                app:layout_column="0" />

            <Button
                android:onClick="@{() -> viewModel.selectOperand(1)}"
                android:text="1"
                app:layout_row="2"
                app:layout_column="1" />

            <Button
                android:onClick="@{() -> viewModel.selectOperand(2)}"
                android:text="2"
                app:layout_row="2"
                app:layout_column="2" />

        </androidx.gridlayout.widget.GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>